<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SensorAnimation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryBackgroundColor</item>
        <item name="colorPrimaryVariant">@color/PrimaryBackgroundColor</item>
        <item name="colorOnPrimary">@color/PrimaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/PrimaryBackgroundColor</item>
    </style>

    <!--ErrorAlertDialogTheme-->
    <style name="ErrorAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/PrimaryColor</item>
        <item name="android:textColorPrimary">@color/PrimaryColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonDialogStyle</item>
        <item name="android:windowBackground">@color/PrimaryBackgroundColor</item>
    </style>

    <style name="PositiveButtonDialogStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/StarViewPrimaryColor</item>
    </style>
</resources>